{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "pnpm-lock.lock",
    "**/tsconfig.json",
    "**/.eslintrc.json",
    "**/tsup.config.ts",
    "turbo.json",
    "package.json",
    ".prettierrc.json",
    "**/.prettierignore"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "package.json"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["@darcy/api-wrapper#build"],
      "inputs": ["**/*.tsx", "**/*.ts", "**/*.js", "tsconfig.eslint.json", "package.json"],
      "outputs": []
    },
    "format": {
      "dependsOn": ["@darcy/api-wrapper#build"],
      "inputs": ["**/*.tsx", "**/*.ts", "**/*.js", "tsconfig.eslint.json", "package.json"],
      "outputs": []
    },
    "format:eslint": {
      "dependsOn": ["@darcy/api-wrapper#build"],
      "inputs": ["**/*.tsx", "**/*.ts", "**/*.js", "tsconfig.eslint.json", "package.json"],
      "outputs": []
    },
    "format:prettier": {
      "inputs": ["**/*.tsx", "**/*.ts", "**/*.js", "tsconfig.eslint.json", "package.json"],
      "outputs": []
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": ["@darcy/api-wrapper#build"],
      "cache": false,
      "persistent": true
    },
    "@darcy/darcy#build": {
      "dependsOn": ["@darcy/api-wrapper#build"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.css", "public/**", "next.config.js", "package.json"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "@darcy/api-wrapper#build": {
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist/**"]
    },
    "@darcy/api#build": {
      "inputs": ["apps/**/*.ts"],
      "outputs": ["dist/**"]
    }
  }
}
