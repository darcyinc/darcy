{
  "$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["pnpm-lock.lock", "**/tsconfig.json", "**/tsup.config.ts"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts"
      ],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", ".eslintcache"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "**/src/**/*.tsx",
        "**/src/**/*.ts",
        "**/.eslintrc.json",
        "**/tsconfig.eslint.json",
        "**/.prettierrc"
      ],
      "outputs": [".eslintcache"]
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": ["@darcy/api-wrapper#build"],
      "cache": false,
      "persistent": true
    }
  }
}
