{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/.eslintrc.json",
        "**/tsconfig.eslint.json",
        "**/src/**/*.tsx",
        "**/src/**/*.ts",
        "**/src/**/*.css",
        "**/src/**/*.scss",
        "**/.prettierrc",
        "**/next.config.js"
      ],
      "outputs": ["**/.next/**", "!**/.next/cache/**", "**/dist", "**/.eslintcache"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "**/.eslintrc.json",
        "**/tsconfig.eslint.json",
        "**/src/**/*.tsx",
        "**/src/**/*.ts",
        "**/.prettierrc"
      ]
    },
    "start": {
      "inputs": ["**/next.config.js", "**/.env"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
