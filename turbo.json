{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/.eslintrc.json",
        "**/tsconfig.eslint.json",
        "**/src/**/*.tsx",
        "**/src/**/*.ts",
        "**/src/**/*.css",
        "**/src/**/*.scss",
        "**/.prettierrc",
        "**/next.config.js"
      ],
      "outputs": [".next/**", "!.next/cache/**", "dist"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "**/.eslintrc.json",
        "**/tsconfig.eslint.json",
        "**/src/**/*.tsx",
        "**/src/**/*.ts",
        "**/.prettierrc"
      ]
    },
    "start": {
      "inputs": ["**/next.config.js", "**/.env"],
      "outputs": [".next/**", "!.next/cache/**", "dist"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
