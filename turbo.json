{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        ".eslintrc.json",
        "tsconfig.eslint.json",
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.css",
        "src/**/*.scss",
        ".prettierrc",
        "next.config.js"
      ],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", ".eslintcache"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "**/.eslintrc.json",
        "**/tsconfig.eslint.json",
        "**/src/**/*.tsx",
        "**/src/**/*.ts",
        "**/.prettierrc"
      ],
      "outputs": [".eslintcache"]
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": ["@darcy/api-wrapper#build"],
      "cache": false,
      "persistent": true
    }
  }
}
