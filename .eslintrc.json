{
  "extends": [
    "next/core-web-vitals",
    "plugin:jsx-a11y/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "node_modules/*",
    ".next/*",
    "*.js"
  ],
  "plugins": [
    "unicorn",
    "jsx-a11y",
    "prettier",
    "import"
  ],
  "settings": {
    "import/resolver": {
      "typescript": true,
      "node": true
    }
  },
  "rules": {
    "@next/next/no-img-element": "off",
    "prettier/prettier": "error",
    "import/no-named-as-default": "off",
    "import/no-unused-modules": [
      "error",
      {
        "missingExports": true,
        "unusedExports": true,
        "ignoreExports": [
          "**/*.d.ts",
          "**/+(layout|page).tsx"
        ]
      }
    ],
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always"
      }
    ]
  }
}