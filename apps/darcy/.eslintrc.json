{
  "extends": ["next/core-web-vitals", "plugin:jsx-a11y/recommended", "../../.eslintrc.json"],
  "plugins": ["jsx-a11y"],
  "rules": {
    "@next/next/no-img-element": "off",
    "import/no-unused-modules": [
      "error",
      {
        "missingExports": true,
        "unusedExports": true,
        "ignoreExports": ["**/tailwind.config.ts", "**/+(layout|page|not-found).tsx"]
      }
    ],
    "react/jsx-sort-props": [
      "error",
      {
        "shorthandFirst": true,
        "callbacksLast": true,
        "ignoreCase": true,
        "multiline": "first"
      }
    ],
    "react/button-has-type": "error",
    "react/jsx-boolean-value": ["error", "never"],
    "react/jsx-no-useless-fragment": "error",
    "unicorn/filename-case": [
      "error",
      {
        "cases": {
          "camelCase": true,
          "pascalCase": true,
          "kebabCase": true
        }
      }
    ]
  }
}
