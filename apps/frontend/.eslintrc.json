{
  "extends": [
    "../../.eslintrc.json",
    "next/core-web-vitals",
    "plugin:jsx-a11y/recommended"
  ],
  "ignorePatterns": [
    "next-env.d.ts"
  ],
  "plugins": [
    "jsx-a11y"
  ],
  "rules": {
    "@next/next/no-img-element": "off",
    "import/no-unused-modules": [
      "error",
      {
        "missingExports": true,
        "unusedExports": true,
        "ignoreExports": [
          "**/*.d.ts",
          "**/+(layout|page|not-found|template).tsx"
        ]
      }
    ],
    "unicorn/consistent-function-scoping": "off",
    "react/jsx-sort-props": [
      "error",
      {
        "shorthandFirst": true,
        "callbacksLast": true,
        "ignoreCase": true,
        "multiline": "first"
      }
    ],
    "react/button-has-type": "error",
    "unicorn/filename-case": [
      "error",
      {
        "cases": {
          "camelCase": true,
          "pascalCase": true,
          "kebabCase": true
        }
      }
    ]
  }
}